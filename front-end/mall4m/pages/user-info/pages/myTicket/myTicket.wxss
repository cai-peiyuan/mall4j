/* pages/user-info/pages/myTicket/myTicket.wxss */
.container{min-height: 100vh;}
.tabItems{
    height: 40px; 
    background-color: #fff; 
    position:fixed; 
    height: 40px; 
    width:100vw; 
    z-index:10
}
.tabItem{font-size: 16px; position: relative; z-index: 10;}
.tabItem.active{font-weight: bold; font-size: 18px;}
.tabItem.active::after{
    display: block;
    width:100%; 
    height: 5px;
    content:" ";
    position: absolute; 
    z-index: -1;
    bottom:0px;
    border-radius: 2px;
    background-color: rgba(228, 179, 90,.8);
}
.couponItem{
    box-sizing: border-box;
    margin: 0 auto 4vw;
    width:92vw;
    min-height:38vw; 
    background-color: rgb(228, 191, 111);
    border-radius: 4vw;
    color:#fff;
    position: relative;
    top:40px;
}
.couponName{
    font-size: 20px; 
    color:#fff;
    padding:4vw 4vw 0;
}
.couponRange{
    padding:2vw 4vw;
    font-size: 14px;
    height: 8vw;
}
.availDate{
    padding:0 4vw;
    font-size: 12px; 
    /* margin-top: 0vw; */
}
.gettingDate{
    position: absolute;
    bottom:3vw;
    right:4vw;
    color:#000;
    font-size: 12px; 
}
.couponItemDisable{
    background-color: rgb(175, 172, 172);
}
.seperateLine{
    border-bottom: dashed 1px #eee;
    margin-top: 3vw;
    position:relative;
}
.seperateLine::before,.seperateLine::after{
    content: "";
    width:5vw;
    height: 5vw;
    border-radius: 50%;
    /* border:solid 1px red; */
    position:absolute;
    left:-2.5vw;
    top:-2.5vw;
    background-color: #fff;
}
.seperateLine::after{
    left:auto;
    right:-2.5vw;
}
.outDateImg{
    position: absolute;
    right: 3vw;
    top: 3vw;
}