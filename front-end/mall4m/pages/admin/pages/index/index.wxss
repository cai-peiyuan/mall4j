.btnArea {
  flex-wrap: wrap;
  box-sizing: border-box;
}

.btnItem {
  width: 25vw;
  height: 25vw;
  box-sizing: border-box;
  font-size: 14px;
}

.imgArea {
  width: 12vw;
  height: 12vw;
  /* border:solid 1px red;  */
  margin-bottom: 2vw;
}

.btnImg {
  width: 12vw;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .6)
}

.orderDialog {
  padding: 5vw 0 5vw;
  width: 100vw;
  height: 80vw;
  background-color: #Fff;
  border-radius: 3vw 3vw 0 0;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
}

.close{text-align: right; padding-right: 3vw; font-weight: 200; color:#999}
.close::before {
    content: "\2716";
}